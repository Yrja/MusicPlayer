<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/outer_oval_padding"
        android:left="@dimen/outer_oval_padding"
        android:right="@dimen/outer_oval_padding"
        android:top="@dimen/outer_oval_padding">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimaryDark" />
            <size
                android:width="@dimen/permission_not_granted_dimen"
                android:height="@dimen/permission_not_granted_dimen" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/inner_oval_padding"
        android:left="@dimen/inner_oval_padding"
        android:right="@dimen/inner_oval_padding"
        android:top="@dimen/inner_oval_padding">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@android:color/white" />
            <size
                android:width="@dimen/permission_not_granted_dimen"
                android:height="@dimen/permission_not_granted_dimen" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/icon_padding"
        android:drawable="@drawable/ic_folder"
        android:left="@dimen/icon_padding"
        android:right="@dimen/icon_padding"
        android:top="@dimen/icon_padding" />
</layer-list>